<AnchorPane maxHeight="450.0" maxWidth="380.0" minHeight="395.0" minWidth="380.0" prefHeight="450.0" prefWidth="380.0" styleClass="background" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mvms.controllers.LoginController">
